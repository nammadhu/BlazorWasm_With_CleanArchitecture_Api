<MudPaper Class="flash-message" Elevation="0">
    <MudText Ticks="Interval" Direction="Left">
        @Content
    </MudText>
</MudPaper>

<style>
.flash-message
{
    overflow: hidden;
    white-space: nowrap;
    width: 100%; /* Adjust width as needed */
    animation: scrolltext infinite linear;
}

@@keyframes scrolltext {
    from { transform: translateX(0px); }
    to { transform: translateX(-100%); } /* Adjust scroll distance */
}
</style>

@code {
    // not tested
    [Parameter]
    public string Content { get; set; }

    [Parameter]
    public int Interval { get; set; } = 30; // Adjust scrolling speed (milliseconds)

    protected override async Task OnInitializedAsync()
        {
        while (true)
            {
            await Task.Delay(Interval);
            StateHasChanged();
            }
        }
}
