@using MyTown.Domain
@* https://mudblazor.com/components/card#combined *@
@if (Model != null)
    {
    <MudCard>
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar Color="Color.Secondary">@Model.Name.First()</MudAvatar>
            </CardHeaderAvatar>
            <CardHeaderContent>
                @*  <MudText Typo="Typo.body1">@Model.Title</MudText> *@
                <StringDisplay Text="@Model.Name" Typo="Typo.body1" />
                <StringDisplay Text="@Model.SubTitle" Typo="Typo.body2" />
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
            </CardHeaderActions>
        </MudCardHeader>

        <MudCarousel Class="mud-width-full" ShowArrows="@true" ShowBullets="@true" EnableSwipeGesture="@true" AutoCycle="@true" TData="object"
                     Style="@($" color:{@Colors.Red.Default};height:50vh;mud-carousel;")">

            <ImageCarouselItemDisplay ImageUrl="@Model.ImageUrl" />
            @* <ImageCarouselItemDisplay ImageUrl="@Model.TownImageUrl1" />
            <ImageCarouselItemDisplay ImageUrl="@Model.TownImageUrl2" />
            <ImageCarouselItemDisplay ImageUrl="@Model.TownImageUrl3" />
            <ImageCarouselItemDisplay ImageUrl="@Model.TownImageUrl4" />  *@

            @if (Model.YouTubeUrl!= null)
                {
                <MudCarouselItem Transition="@Transition.Slide">
                    <YouTubeVideoDisplay YouTubeUrlSrc="https://www.youtube.com/embed/Ktc8GLW3QZo?si=T0JUqrfq8RXIPewX" />
                </MudCarouselItem>
                }
        </MudCarousel>


        <MudCardContent>
            <StringDisplay Text="@Model.Description" />
            <StringDisplay Text="@Model.Address" />
            <StringDisplay Text="@Model.MobileNumber" />
        </MudCardContent>
        <MudCardActions>
            <UrlIconButton Url="@Model.GoogleProfileUrl" Icon="@("fab fa-youtube")" />
            <UrlIconButton Url="@Model.GoogleMapAddressUrl" Icon="@("fab fa-youtube")" />
            <UrlIconButton Url="@Model.YouTubeUrl" Icon="@("fab fa-youtube")" />
            <UrlIconButton Url="@Model.FaceBookUrl" Icon="@("fab fa-facebook-f")" />
            <UrlIconButton Url="@Model.InstagramUrl" Icon="@("fab fa-instagram")" />
            @* Icon="@("fas fa-phone")" Icon="@("fas fa-envelope")"*@
            <UrlIconButton Url="@Model.OtherReferenceUrl" />
            @* onclick above opens in new tab *@

            <MudIconButton Icon="@Icons.Material.Filled.Share" Color="Color.Default" />
        </MudCardActions>
    </MudCard>
    }

@code {
    [Parameter]
    public TownDto Model { get; set; }

    [Parameter]
    public string? Style { get; set; }

    //parameter style
}
